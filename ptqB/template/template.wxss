/*3.0版本样式*/
.nowDay_box{
    padding: 30rpx;
    background: #fff;
    margin-bottom: 15rpx;
}
.nowDay_box_t{
    width: 100%;
    height: 445rpx;
    position: relative;
    overflow: hidden;
    border: 2rpx #eee solid;
}
.nowDay_box_t_title{
    color: #fff;
    /*font-weight: 900;*/
    font-size: 1.3em;
    position: absolute;
    transform: rotate(-45deg);
    top:50rpx;
    height: 55rpx;
    width: 300rpx;
    left: -70rpx;
}
.nowDay_box_txt{
    line-height: 45rpx;
    font-size: 1.3em;
    margin-top: 20rpx;
    color: #666;
}
.nowDay_box_btn{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 15rpx;
}
.nowDay_box_btn_l_in1{
    font-size: 1.3em;
    color: #e60012;
}
.nowDay_box_btn_l_in2{
    font-size: .8em;
    color:#b0b0b0;
    margin-left: 15rpx;
    text-decoration:line-through;
}
.nowDay_box_btn_r{
    padding: 10rpx 20rpx;
    color: #fff;
    font-size: 1.1em;
    background: #e60012;
    border-radius: 10rpx;
    padding-right: 10rpx;
}
.nowDay_box_btn_r_in2{
    width: 30rpx;
    height: 30rpx;
}
.nowDay_box_btn_r_in2 image{
    width: 100%;
    height: 100%;
}
/*首页拼团立减样式*/
.index_group_box{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}
.groupGoods_box{
    width: 49%;
    margin-top: 20rpx;
    background: #fff;
}
.groupGoods_box:nth-child(2n){
    margin-left: 2%;
}
.groupGoods_box_t{
    width: 100%;
    height: 240rpx;
}
.groupGoods_box_t image{
    width: 100%;
    height: 100%;
}
.groupGoods_box_txt{
    color: #6e6e6e;
    padding: 15rpx;
    font-size: 1.1em;
}
.groupGoods_box_price{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0rpx 15rpx;
    padding-bottom: 20rpx;
}
.groupGoods_box_price_l{
    font-size: 1.3em;
    color:#e60012;
}
.groupGoods_box_price_r{
    color: #a9a9a9;
    font-size: 1em;
}
