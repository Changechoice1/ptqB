/* packageMarketing/peerHot/index.wxss */
@import '/template/template.wxss';
page{
  background-color:#fff;
  height:100%;
}
.tabs{
  width:100%;
  height:88rpx;
  background-color:#fff;
  display: flex;
  padding:0 70rpx;
  box-sizing: border-box;
}
.item-tab{
  width:200rpx;
  height:88rpx;
  line-height:88rpx;
  text-align: center;
  color:#333;
  font-size:28rpx;
}
.active{
  border-bottom: 2rpx solid #e60012;
  color:#e60012;
}
.industry{
  height:80rpx;
  line-height: 80rpx;
  padding-left:30rpx;
  background-color:#f5f5f5;
}

.custom-list{
  width:690rpx;
  display: flex;
  display:-webkit-flex;
  flex-warp:wrap;
  -webkit-flex-wrap:wrap;
  margin-bottom:10rpx;
}

.null_data{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:200rpx 0;
}
.null_img{
  width:260rpx;
  height:260rpx;
  margin-bottom: 40rpx;
}