@import '../../drptGroupList/drptGroupList.wxss';
@import '/template/template.wxss';

page{
  font-size: 28rpx;
}
.list{
  background-color: #f0f0f0;
}
.item{
  margin-bottom: 16rpx;
  padding: 0 30rpx;
  background-color: #fff;
}
.info1{
  position: relative;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}
.info2{
  height: 88rpx;
  line-height: 88rpx;
}
.info2 > view{
  display: inline-block;
}

.info_logo{
  overflow: hidden;
  border-radius: 50%;
  width: 88rpx;
  height: 88rpx;
}
.info_logo > image{
  width: 100%;
  height: 100%;
}
.info_box{
  margin-left: 17rpx;
  width: 585rpx;
}
.info_name{}
.info_name_label{
  color: #999;
  font-size: 24rpx;
}

.info_amount > view{
  font-size: 24rpx;
}
.info_amount_value{
  color: #e60012;
}
.info_amount_other{
  font-size: 20rpx;
  color: #666;
}
.info_status{
  width: 88rpx;
  text-align: center;
  color: #e60012;
  font-size: 26rpx;
  font-weight: 500;
}
.info_end_date{
  margin-left: 17rpx;
  color: #666;
  font-size: 24rpx;
}

.opt_box{
  padding: 15rpx 0;
}