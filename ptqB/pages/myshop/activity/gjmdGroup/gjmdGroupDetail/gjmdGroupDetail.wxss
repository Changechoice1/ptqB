@import '/template/template.wxss';
page{
  background-color: #fff;
  font-size: 28rpx;
}

.list_box{}
.tab{
  position: relative;
  padding: 0 60rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, .07);
}
.tab_item{
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
.tab_item.active{
  border-bottom: 2rpx solid #e60012;
  color: #e60012;
}

.list{}
.list_item{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.logo{
  overflow: hidden;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
}
.logo > image{
  width: 100%;
  height: 100%;
}
.info{
  box-sizing: border-box;
  padding-bottom: 7rpx;
  width: 590rpx;
  height: 80rpx;
}
.info > view{
  height: 50%;
}
.info_title{
  font-size: 26rpx;
}
.info_title > text{
  font-weight: 600;
}
.info_other{
  line-height: 1;
}
.info_datetime{
  color: #666;
  font-size: 22rpx;
}
.info_amount{
  color: #e60012;
  font-size: 28rpx;
}
.info_amount > text{
  font-weight: bold;
}
.info_state0{
  color: #e60012;
  font-weight: 500;
  font-size: 28rpx;
}
.info_state1{
  color: #999;
  font-weight: 500;
  font-size: 28rpx;
}

.nD_i_in{
  margin: 200rpx auto 0;
}
.nD_i_in_t_img {
  width: 348rpx;
  height: 166rpx;
}