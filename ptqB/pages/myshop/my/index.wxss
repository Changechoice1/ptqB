/* banner */
@import '/template/template.wxss';
.banner{
  height: 350rpx;
}
.banner_video, .banner_video > video, .banner_video > image{
  width: 100%;
  height: 100%;
}

/* menu */
.menu{
  background-color: #F0F0F0;
}
.menu_block{
  margin-top: 20rpx;
  background-color: #fff;
}
.menu_block:first-child{
  margin-top: 0;
}
.menu_block_item{
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 28rpx;
}
.menu_block_item:last-child{
  border: none;
}
.menu_block_item_title{
  margin-left: 30rpx;
}
.menu_block_item_value{
  margin-right: 20rpx;
  color: #999;
}
.icon-pq-rightarr{
  color: #999;
}
/* footer */
.footer{
  padding: 50rpx 0 40rpx;
  background-color: #F0F0F0;
  text-align: center;
}
.footer_logo{
}
.footer_logo > image{
  width: 340rpx;
  min-width: 340rpx;
  height: 30rpx;
}
.footer_tip{
  margin-top: 30rpx;
  color: #999;
  font-size: 24rpx;
}
.footer_protocol{
  margin-top: 10rpx;
  color: #6A7FA6;
  font-size: 24rpx;
}