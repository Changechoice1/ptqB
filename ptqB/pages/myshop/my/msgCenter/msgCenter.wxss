/* pages/myshop/infocenter/infocenter.wxss */
@import '/template/template.wxss';

.info_con {
    padding: 0 30rpx;
    background: #fff;
}

.info_block {
    padding: 20rpx 0;
    border-bottom: 2rpx solid #eee;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}

.info_con .info_block:last-child {
    border-bottom: none;
}

.info_img {
    width: 130rpx;
    height: 130rpx;
}

.info_text {
    width: 50%;
    padding-left: 20rpx;
}

.info_text > text {
    display: block;
}

.info_text .info_content {
    color: #999;
    margin-top: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info_time {
    width: 30%;
    text-align: right;
    color: #999;
}
