/*评价模块的样式*/

.eva {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding-bottom: 110rpx;
}

.eva_t {
  display: flex;
  align-items: center;
  position: relative;
  border-bottom: 2rpx #eee solid;
  padding-bottom: 20rpx;
}

.eva_t_l {
  width: 100rpx;
  height: 100rpx;
  min-width: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.eva_t_r_in {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.eva_t_r_in_r {
  color: #999;
  font-size: 24rpx;
}

.eva_t_r {
  padding-left: 20rpx;
  width: 100%;
}

.gradus {
  width: 10rpx;
  height: 10rpx;
  background: #888;
  border-radius: 50%;
  margin-left: 15rpx;
}

.stratNum {
  width: 30rpx;
  height: 30rpx;
  min-width: 30rpx;
  margin-right: 5rpx;
}

.eva_t_r_in_l1 {
  font-size: 0.8em;
  color: #999;
}

.eva_t_del {
  width: 210rpx;
  height: 80rpx;
  box-shadow: 0rpx 0rpx 20rpx #eee;
  border-radius: 5rpx;
  position: absolute;
  background: #fff;
  right: 0rpx;
  top: 75rpx;
}

.eva_txt {
  padding: 30rpx 0rpx;
  line-height: 1;
  color: #333;
}

.eva_img {
  display: flex;
  flex-wrap: wrap;
}

.eva_img_in {
  width: 32%;
  height: 220rpx;
  margin-right: 2%;
  margin-bottom: 20rpx;
}

.eva_img_in:nth-child(3n) {
  margin-right: 0rpx;
}

.eva_goods {
  padding: 10rpx 15rpx 15rpx;
  background: #f0f0f0;
  display: flex;
  margin-top: 20rpx;
}

.eva_goods_l {
  width: 216rpx;
  height: 144rpx;
  min-width: 216rpx;
}

.eva_goods_r {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.eva_goods_r_t {
  font-size: 0.9em;
}

.eva_goods_r_b {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.eva_goods_r_b_r {
  padding: 10rpx 20rpx;
  background: #ffa625;
  color: #fff;
  border-radius: 10rpx;
}

.eva_goods_r_b_l_in1 {
  color: #999;
  font-size: 0.8em;
}

.eva_goods_r_b_l_in2 {
  color: #e60012;
  margin-top: 5rpx;
}

.eva_store {
  padding: 20rpx;
  position: relative;
  background: #f0f0f0;
  margin-top: 30rpx;
}

.eva_store_in {
  position: relative;
  z-index: 2;
  line-height: 1;
}

.eva_store_in > text {
  word-break: break-all;
  line-height: 1;
}

.eva_store::after {
  content: "";
  width: 40rpx;
  height: 40rpx;
  background: #f0f0f0;
  transform: rotate(53deg) skewX(20deg);
  display: block;
  position: absolute;
  left: 35rpx;
  top: -10rpx;
  z-index: 1;
}

.eva_storeHf {
  padding: 20rpx 0rpx;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  width: 100%;
}

.eva_storeHf_in {
  background: #e60012;
  color: #fff;
  border-radius: 15rpx;
  width: 160rpx;
  height: 60rpx;
}

.divide {
  padding: 30rpx 0 10rpx 30rpx;
}

.eva_content {
  word-break: break-all;
  background: #f5f5f5;
  padding: 30rpx;
  margin-top: 30rpx;
}

.eva_text {
  background: #f5f5f5;
  padding: 30rpx;
  margin-top: 30rpx;
}

.eva_text > textarea {
  width: 100%;
  height: 200rpx;
}

.bsn {
  position: fixed;
  bottom: -4rpx;
  background: #fff;
  height: 100rpx;
  width: 100%;
  overflow: hidden;
  border-top: 2rpx #eee solid;
  z-index: 9999;
}

.bsn_in {
  padding: 12rpx 20rpx;
  background: #e60012;
  color: #fff;
  float: right;
  margin-right: 30rpx;
  border-radius: 10rpx;
  transform: translateY(-50%);
  margin-top: 50rpx;
}

.wait-confirm {
  height: 205rpx;
  background-color: #fff;
  padding: 0 30rpx;
	display: flex;
	flex-direction:column;
	align-items:flex-end;
}

.wait-btn {
  width: 150rpx;
  height: 54rpx;
  background: rgba(204, 204, 204, 1);
  border-radius: 10rpx;
	text-align:center;
	color:#fff;
	font-size:28rpx;
	line-height:54rpx;
	margin:24rpx 0 20rpx 0;
}

.wait-info{
	height:85rpx;
	background:#f7f7f7;
	color:#666;
	font-size:24rpx;
	line-height:1.4;
	display:flex;
	align-items:center;
	padding:0 20rpx;
	box-sizing:border-box;
}
