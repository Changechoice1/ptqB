@import '/template/template.wxss';
@import '/template/activity/actType/actType.wxss';

page{
	background: #fff;
}
/* 活动类型 */
.all_headerBox{
  width: 100%;
	white-space: nowrap;
  font-size: 26rpx;
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
	background: #fff;
	border-bottom: 2rpx #f0f0f0 solid;
	position: fixed;
	top: -4rpx;
  overflow-x: scroll;
}
.all_headerBox .allOrderBtn{
	display: inline-block;
	height: 84rpx;
	width: 165rpx;
	text-align: center;
}
.all_headerBox_in{
	height: 84rpx;
	width: 60%;
	border-bottom: 2rpx solid #fff;
	padding: 0rpx 10rpx;
}
/* 查询 */
.search_box{
  box-sizing: border-box;
  position: fixed;
  top: 96rpx;
  left: 0;
  padding: 0 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #F7F7F7;
}
.search_btn{
  position: relative;
  padding: 16rpx 50rpx 16rpx 40rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 10rpx;
  background-color: #fff;
  line-height: 1;
  font-size: 28rpx;
}
.search_txt{
  display: flex;
}
.search_txt_title{
  font-size: 24rpx;
  color: #666;
}
.search_txt_value{
  font-size: 26rpx;
  color: #333;
}
.search_txt_btn{
  padding: 0 20rpx;
  height: 80rpx;
}
.search_txt_btn > image{
  width: 35rpx;
  height: 35rpx;
}
.search_btn::after{
  content: "";
  position: absolute;
  top: 25rpx;
  right: 20rpx;
  width: 0;
  height: 0;
  border: 14rpx solid #999;
  border-width: 12rpx 8rpx 0 8rpx;
  border-color: #999 transparent transparent transparent;
}
.order_nums{
  font-size: 26rpx;
  color: #666;
}
.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 1000;
}
.choose_oc_inner {
    position: fixed;
    z-index: 90000;
    background: #fff;
    width: 85%;
    /* margin: 100rpx auto 0; */
    top: 100rpx;
    left: 7.5%;
    border-radius: 15rpx;
}
.choose_area_inner{
    width: 100%;
    position: absolute;
    height: 45%;
    bottom: 0;
    left: 0;
    border-radius: 0;
}
.choose_oc_h {
    padding: 20rpx 30rpx;
    background: #f5f5f5;
}
.choose_oc_inner > .choose_oc_h:first-child {
    border-radius: 15rpx 15rpx 0 0;
}
.choose_oc_btn {
    padding: 30rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-top: 30rpx;
}
.choose_oc_btn_1{
    justify-content: space-between
}
.cancle {
    color: #999;
    width: 15%;
    text-align: center;
}
.confirm {
    color: #e60012;
    width: 20%;
    text-align: center;
}
.choose_oc_btn_1 .cancle{
    width: 20%;
}
.choose_oc_inner picker-view {
    width: 50%;
    height: 300rpx;
    margin: auto;
}
.choose_oc_line {
    line-height: 50rpx;
    text-align: center;
}


.index_all_box{
	padding-top: 180rpx;
}
.orRoter{
	transform: rotate(90deg);
}
