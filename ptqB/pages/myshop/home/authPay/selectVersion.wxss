/* pages/myshop/authPay/selectVersion.wxss */
page{
  background-color: #f0f0f0;
}
.flex{
  display: flex;
}

.sel_ver_box{
  padding: 30rpx;
}
.sel_ver_item{
  margin-bottom: 30rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 20rpx;
  overflow: hidden;
}
.sel_ver_item_b{
  border-color: #ffb515;
  box-shadow: 0rpx 10rpx 25rpx #ddd;
}
.sel_ver_item_f{
  border-color: #ff6648;
  box-shadow: 0rpx 10rpx 25rpx #ddd;
}
.item_header{
  padding: 20rpx 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  background-color: #fff;
}
.item_header_v{
  font-size: 32rpx;
}
.item_header_v_b{
  color: #ffb515;
}
.item_header_v_f{
  color: #ff6648;
}
.item_header_c{
  margin-top: 10rpx;
}
.item_header_c_comm{
  font-size: 28rpx;
}
.item_header_c_money{
  font-size: 30rpx;
}
.item_cont{
  padding: 30rpx;
  border-radius: 0 0 20rpx 20rpx;
  background-color: #f7f7f7;
  font-size: 24rpx;
}


.sel_ver_tip{
  padding: 20rpx 30rpx;
}
.sel_ver_tip_box{
  margin-top: 20rpx;
}
.sel_ver_tip_box:first-child{
  margin-top: 0;
}
.sel_ver_tip_inbox{
  display: flex;
}
.sel_ver_tip_icon{
  width: 40rpx;
  height: 40rpx;
}
.sel_ver_tip_icon > image{
  width: 100%;
  height: 100%;
}
.sel_ver_tip_text{
  margin-left: 20rpx;
  font-size: 28rpx;
}

.sel_ver_btn_box2{
  position: fixed;
  left: 0;
  bottom: 150rpx;
  width: 100%;
}
.sel_ver_btn_box3{
  padding: 140rpx 0 50rpx;
}
.sel_ver_btn{
  border-radius: 20rpx;
  width: 480rpx;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #e60012;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}