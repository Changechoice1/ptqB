/*密码*/

.wd_tx_payPass {
    margin-top: 60rpx;
}

.payPass_box_m_in {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 10;
}

.payPass_box_m_in_in {
    width: 70rpx;
    height: 70rpx;
    border: 2rpx #bfbfbf solid;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 8rpx;
    position: relative;
}

.payPass_box_m_in_sx {
    position: absolute;
    z-index: 999;
    height: 48rpx;
    width: 4rpx;
    top: 11rpx;
    left: 50%;
    transform: translateX(-50%);
    background: #333;
    animation: inputAn 1s linear infinite;
}

@keyframes inputAn {
    0% {
        opacity: 1;
    }
    50% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

.payPass_box_m_in_in input {
    text-align: center;
    font-size: 3em;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100%;
    line-height: 50rpx;
}

.indexTopInput {
    position: absolute;
    height: 100%;
    background: #000;
    opacity: 0.5;
    z-index: 2;
    left: 0rpx;
    background: red;
    left: -150%;
}

.indexTopInput input {
    width: 100%;
    height: 100%;
}


