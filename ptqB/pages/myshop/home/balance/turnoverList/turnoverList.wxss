@import '/template/template.wxss';
page{
  background-color: #fff;
}

.dm_box{
	background: #fff;
}
.dm_box_in{
	padding: 30rpx;
	border-bottom: 1px #f5f5f5 solid;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.dm_box_in_l{
	max-width: 85%;
}
.dm_box_in_l_in1{
  width:20em;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
	color: #000;
	font-size: 30rpx;
}
.dm_box_in_l_in2{
	margin-top: 10rpx;
	font-size: 26rpx;
	color: #999;
}
.dm_box_in_r{
	color: #3cb500;
	font-size: 30rpx;
}
.dm_box_in_r1{
	 /* color: #e60012;  */
	font-size: 30rpx;
}
.dm_foot{
	display: flex;
	justify-content: space-between;
	align-items: center;
	background: #fff;
	width: 100%;
	position: fixed;
	bottom: 0rpx;
  border-top: 1rpx solid #e8e8e8;
  font-size: 32rpx;
  height: 97rpx;
  line-height: 97rpx;
}
.dm_foot_l{
	display: flex;
	align-items: center;
	margin-left: 20rpx;
}
.dm_foot_l_in1{
	width: 42rpx;
	height: 42rpx;
}
.dm_foot_l_in1 image{
	width: 100%;
	height: 100%;
}
.dm_foot_l_in2{
	margin-left: 5rpx;
}
.dm_foot_r{
	display: flex;
	align-items: center;
	color: #333;
	margin-right: 20rpx;
}
.dm_foot_r > text{
  margin: 0rpx 10rpx;
  color: #e60012;
}

.dm_fixed_box_bg{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 990;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0)
}
.dm_fiexd_box{
	position: fixed;
	left: 25rpx;
	bottom: 110rpx;
  z-index: 991;
	width: 235rpx;
	border-radius: 15rpx;
	box-shadow: 0rpx 0rpx 10rpx #f0f0f0 solid;
	background: #666666;
	transition: .2s linear;
	 font-size: 1.1em; 
}
.dm_fiexd_box_in{
	height: 80rpx;
	color: #fff;
	font-size: 26rpx;
	z-index: 999;
}

.bottomtx {
   padding-bottom: 150rpx; 
}