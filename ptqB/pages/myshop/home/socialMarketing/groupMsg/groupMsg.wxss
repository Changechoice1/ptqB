.mess_con{
    display: flex;
    align-items: flex-start;
    width: 100%;
    
}
.mess_con_img{
    width: 60rpx;
    height: 60rpx;
    min-width: 60rpx;
    border-radius: 50%;
    margin-right: 15rpx;
}
.mess_con_txt{
    padding: 10rpx 15rpx;
    border:2rpx #999 solid;
