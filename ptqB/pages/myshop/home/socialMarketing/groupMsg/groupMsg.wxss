@import '/template/template.wxss';
@import '/template/activity/actType/actType.wxss';
@import '/components/diyMoadel/diyMoadel.wxss';
.scroll_tip{
  position: fixed;
  z-index: 1000;
  padding: 0 30rpx;
  top: 0;
  left: 0;
  width: 690rpx;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #fff3d7;
  color: #666;
  font-size: 26rpx;
  overflow-x: scroll;
}
.scroll_tip_inner{
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.scroll_tip_cont{
  position: absolute;
  top: 0;
  left: 0;

  width: auto;
  height: 100%;
  overflow: visible;
  white-space: nowrap;
}
.top_header {
    height: 98rpx;
    line-height: 98rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4rpx;
    /* font-size: 1.1em; */
    background: #f5f5f5;
    position: fixed;
    z-index: 999;
    top: 98rpx;
    width: 92%;
    padding: 0 30rpx;
}

.top_header .top_header_l {
    color: #e60012;
    font: 30rpx;
    margin: 0 auto;
}
.gm_bottom_l_in{
    display: flex;
}
.top_header .top_header_r {
    color: #fff;
    padding: 0 25rpx;
    border-radius: 10rpx;
    background: #e60012;
    font: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.gm_t {
    width: 100%;
    background: #fff;
    height: 100rpx;
    border-bottom: 2rpx #f0f0f0 solid;
    position: fixed;
    top: 98rpx;
    z-index: 1000;
}
.gm_t_no_auth{
  margin-top: 196rpx;
}

.gm_t_in {
    padding: 0px 15rpx;
    border-bottom: 2rpx transparent solid;
    height: 100%;
    position: relative;
}

.wh {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    border: 2rpx #37a71d solid;
    line-height: 30rpx;
    text-align: center;
    color: #37a71d;
    font-size: 20rpx;
    margin-left: 10rpx;
    position: absolute;
    right: -30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.gm_t_in_r {
    color: #e80012;
    border-bottom: 2rpx #e80012 solid !important;
}

.gm_tab {
    position: fixed;
    z-index: 1000;
    top: 198rpx;
    left: 0;
    width: 100%;
    height: 100rpx;
    padding: 0rpx 30rpx;
    box-sizing: border-box;
    background-color: #f5f5f5;
}

.gm_tab_btn {
    padding: 10rpx 40rpx;
    border: 2rpx #999 solid;
    color: #333;
    background: #fff;

    font-size: 26rpx;
    border-radius: 10rpx;
}

.gm_tab_btn:last-child {
    margin-left: 16rpx;
}

.gm_tab_btn_r {
    border: 2rpx #e80012 solid;
    color: #e80012;
}

.gm_tab_r {
    font-size: 24rpx;
}

.active_block {
    position: relative;
    padding: 20rpx 30rpx;
    border-bottom: 2rpx solid #eee;
    display: flex;
    background: #fff;
    padding-left: 40rpx;
}
.not_inventory{
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5)
}
.not_inventory > image{
  width: 168rpx;
  height: 139rpx;
}

.active_main .active_block:last-child {
    border-bottom: none;
}
.active_choose{
    position: relative;
    width: 80rpx;
    min-width: 80rpx;
}
.active_choose>.active_choose_in {
    width: 42rpx;
    min-width: 42rpx;
    height: 36rpx;
    position: relative;
    top: 50%;
    transform: translate(0,-50%);
}

.active_choose_in>.red_font {
    width: 100%;
    color: #e60012;
    text-align: center;
    margin-top: 6rpx;
    font-size: 0.85em;
}

.active_img {
    position: relative;
    width: 252rpx;
    height: 168rpx;
    min-width: 252rpx;
}

.active_content {
    width: 333rpx;
    padding: 5rpx 0rpx;
    padding-left: 5rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    margin-left: 20rpx;
}

.active_content_t {
    line-height: 40rpx;
    margin-top: -5rpx;
}
.active_price{
    line-height: 28rpx;
    display: flex;
    color: #e80012;
}
.active_content_gn{
    line-height: 32rpx;
    margin-top: 10rpx;
    font-size: 28rpx;
}

.active_b2_t {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 20rpx 30rpx;
    background: #fff;
    border-bottom: 2rpx #f0f0f0 solid;
}

.active_b2_head {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
}

.active_b2_name {
    margin-left: 20rpx;
}

.active_b2_wrap {
    border-bottom: 2rpx solid #eee;
    padding: 15px 0;
}

.active_b2_wrap_wrap:last-child {
    border-bottom: none;
    /* padding: 15px 0; */
}



