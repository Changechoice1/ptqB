/* canvas */
.canvas{
  position: absolute;
  top: 0;
  left: -1000rpx;
}
.canvas_box{
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7)
}
canvas{
  margin: 0 auto;
  width: 620rpx;
  height: 760rpx;
  overflow: hidden;
}
.canvas_cont_box{
  margin: 0 auto;
  padding-bottom: 40rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  width: 620rpx;
}
.canvas_tip{
  box-sizing: border-box;
  margin: 0 auto;
  padding: 40rpx;
  width: 100%;
  line-height: 1;
}
.canvas_tip > .tip_title{
  text-align: center;
  font-size: 30rpx;
}
.canvas_tip > .tip_cont{
  margin-top: 25rpx;
  line-height: 1.5;
  font-size: 28rpx;
  color: #666;
}
.canvas_btn{
  margin: 10rpx auto 0;
  width: 100%;
}