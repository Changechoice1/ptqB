/* banner */
@import '/template/payQrImg/payQrImg.wxss';
@import 'marketingPromotion/publishGjmd/qrImgCanvas.wxss';
.nonautoHeight{
  height: 100%;
  overflow: hidden;
}
.banner{
  box-sizing: border-box;
  padding: 20rpx 30rpx 30rpx 40rpx;
  width: 100%;
  background-color: #3D3D3D;
}
.banner_logo{
  box-sizing: border-box;
  padding: 8rpx;
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .36);
  overflow: hidden;
}
.banner_logo > image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.banner_info{
  box-sizing: border-box;
  padding-left: 14rpx;
  width: 580rpx;
}
.banner_info_base{
  box-sizing: border-box;
  align-items: initial;
  padding: 18rpx 0;
  line-height: 1;
  color: #fff;
}
.banner_info_base_txt{
  height: 100%;
  line-height: 1;
}
.banner_info_base_txt_name{
  font-size: 30rpx;
}
.banner_info_base_txt_cusFans{
  margin-top: 16rpx;
  font-size: 24rpx;
}
.banner_info_base_opt{
  margin-left: 30rpx;
  height: 100%;
}
.banner_info_base_opt_img{
  width: 28rpx;
  height: 28rpx;
}
.banner_info_base_opt_img > image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.banner_info_base_opt_txt{
  margin-left: 12rpx;
  font-size: 24rpx;
}

.banner_info_auth{
  margin-top: 12rpx;
  line-height: 1;
  font-size: 24rpx;
}
.banner_info_auth_noOverdue{
  width: 100%;
}
.banner_info_auth_txt1{
  width: 100%;
}
.banner_info_auth_txt_time{
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
}
.banner_info_auth_txt_time1{
  margin-top: 0;
}
.banner_info_auth_opt{
  height: 100%;
}
.banner_info_auth_opt > view{
  color: #fff;
  font-size: 24rpx;
}
.banner_info_auth_opt_btn{
  padding: 14rpx;
  border: 2rpx solid #fff;
  border-radius: 10rpx;
  line-height: 1;
}
.banner_info_auth_overdue{
  color: #fff;
}

/* 操作栏1 */
.operation1{
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  height: 110rpx;
  line-height: 1;
  background-color: #fff;
}
.operation1_item{
  box-sizing: border-box;
  padding: 20rpx 0;
  width: 33.3%;
  text-align: center;
}
.operation1_item_info{
  border-right: 2rpx solid #eee;
  width: 100%;
}
.operation1_item:last-child .operation1_item_info{
  border-right: none;
}
.operation1_item_info_name{
  font-size: 26rpx;
  color: #999;
}
.operation1_item_info_value{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 操作栏2 */
.operation2{
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  width: 100%;
  height: 128rpx;
  background-color: #F7F7F7;
}
.operation2_item{
  position: relative;
  width: 338rpx;
  height: 88rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  background-color: #fff;
}
.operation2_item:nth-child(2n){
  margin-left: 16rpx;
}
.operation2_item_name > icon{
  vertical-align: initial;
}
.operation2_item_value{
  margin-left: 20rpx;
  line-height: 1.5;
  font-size: 28rpx;
}

/* 菜单 */
.menu{
  background-color: #fff;
}
.menu_item{
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
}
.menu_item:last-child{
  border-bottom: none;
}
.menu_item_title{
  font-size: 32rpx;
  font-weight: bold;
}
.menu_item_box{}
.menu_item_inbox1{
  text-align: center;
}
.menu_item_inbox1.bottom{
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.menu_item_inbox2{}
.menu_item_info1{
  position: relative;
  margin-top: 20rpx;
  margin-right: 12rpx;
  width: 222rpx;
  min-width: 222rpx;
  height: 116rpx;
  border-radius: 10rpx;
  overflow: hidden;
  color: #fff;
  background-color: #eeeeee;
  background-size: 100% 100%;
}
.menu_item_info1:nth-child(3n){
  margin-right: 0;
}
.menu_item_info1_title{
  line-height: 116rpx;
  font-size: 28rpx;
}
.menu_item_info1_tip{
  position: absolute;
  top: 65%;
  width: 100%;
  font-size: 22rpx;
}
.menu_item_info2{
  position: relative;
  margin: 30rpx 70rpx 30rpx 0;
  width: 120rpx;
  line-height: 1;
  text-align: center;
}
.menu_item_info2:nth-child(4n){
  margin-right: 0;
}
.menu_item_info2 > icon{
  font-size: 88rpx;
}
.menu_item_info2_title{
  margin-top: 20rpx;
  font-size: 26rpx;
}
.menu_item_info2_tip{
  position: absolute;
  left: 0;
  bottom: -30rpx;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #999;
}

/* footer */
.footer{
  padding: 50rpx 0 40rpx;
  background-color: #F0F0F0;
  text-align: center;
}
.footer_logo{
}
.footer_logo > image{
  width: 340rpx;
  min-width: 340rpx;
  height: 30rpx;
}
.footer_tip{
  margin-top: 30rpx;
  color: #999;
  font-size: 24rpx;
}
.footer_protocol{
  margin-top: 10rpx;
  color: #6A7FA6;
  font-size: 24rpx;
}